      <ListView fx:id="lastListView" layoutX="10.0" layoutY="94.0" prefHeight="30.0" prefWidth="200.0" />
      <Label text="Major" />
      <ListView fx:id="majorListView" layoutX="10.0" layoutY="176.0" prefHeight="30.0" prefWidth="200.0" />
      <Label text="Submissions" />
